{
  "compilerOptions": {
    "noUnusedLocals": true, // Report errors on unused variables
    "noUnusedParameters": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false, // Disallow JavaScript files
    "strict": true, // Enable strict checking options
    "noEmit": true, // Do not emit output files
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Use Node-style module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
